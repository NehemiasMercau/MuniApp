@model IEnumerable<MuniApp.Negocio.entidades.Periodo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Activo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PeriodoTipo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Activo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PeriodoTipo.PeriodoTipoId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PeriodoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PeriodoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PeriodoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
