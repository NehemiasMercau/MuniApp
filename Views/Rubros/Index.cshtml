@model IEnumerable<MuniApp.Negocio.entidades.Rubro>

@{
    ViewData["Title"] = "Listado de Rubros";
}

<style type="text/css">
    .table-responsive {
        display: block;
        width: 100%;
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
    }
</style>
<div class="row">
    <div class="col-md-12">
        <div class="row">
            <h2>Listado de Rubros</h2>
            <hr />
            <p>
                <a asp-action="Create" class="btn btn-outline btn-primary pull-left">Crear Rubro</a>
                 <a asp-action="Index" asp-controller="Home" class="btn btn-outline btn-warning pull-right">Volver al Inicio</a>
            </p>

        </div>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered datatable" style="width: 100%" data-excel="true" data-pdf="true" data-imprimir="true">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            <div class="btn-group-toggle">
                                <a asp-action="Edit" class="btn btn-info btn-sm" asp-route-id="@item.RubroId">Editar</a> |
                                <a asp-action="Delete" class="btn btn-danger btn-sm" asp-route-id="@item.RubroId">Eliminar</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

